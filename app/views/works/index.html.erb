<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Reportes</h1>
  <%= link_to "Nuevo", new_work_path, class: "btn btn-primary" %>
</div>

<div class="table-responsive">
  <table class="table table-sm table-striped table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th>Fecha</th>
        <th>Planta</th>
        <th>N° Cotización</th>
        <th>Solicita</th>
        <th>Supervisor</th>
        <th>Inicio</th>
        <th>Término</th>
        <th>Nombre</th>
        <th>Fotos</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
        <%= render partial: "row", locals: { work: work } %>
      <% end %>
    </tbody>
  </table>
</div>

<%# Si usas Pagy %>
<% if defined?(pagy_nav) && @pagy.present? %>
  <div class="mt-3">
    <%= pagy_nav(@pagy) %>
  </div>
<% end %>
