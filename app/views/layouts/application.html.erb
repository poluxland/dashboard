<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container">
    <%= link_to "Impromaq", root_path, class: "navbar-brand", data: { turbo: false } %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ms-auto">

        <!-- Menú OTs -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle <%= (controller_name == 'ots') ? 'active' : '' %>" href="#" id="otsDropdown"
             role="button" data-bs-toggle="dropdown" aria-expanded="false">
            OTs
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="otsDropdown">
            <li>
              <%= link_to "Listado", ots_path, class: "dropdown-item", data: { turbo: false } %>
            </li>
            <li>
              <%= link_to "Gráficos", graficos_ots_path, class: "dropdown-item", data: { turbo: false } %>
            </li>
            <li>
              <%= link_to "Backlog", graficos_ots_path, class: "dropdown-item", data: { turbo: false } %>
            </li>
          </ul>
        </li>

        <!-- Resto de secciones -->
        <li class="nav-item">
          <%= link_to "Registros Mensuales", monthly_records_path,
                      class: "nav-link #{current_page?(monthly_records_path) ? 'active' : ''}",
                      data: { turbo: false } %>
        </li>
        <li class="nav-item">
          <%= link_to "Indicadores particulares", indicator_readings_path,
                      class: "nav-link #{controller_name == 'indicator_readings' ? 'active' : ''}",
                      data: { turbo: false } %>
        </li>
        <li class="nav-item">
          <%= link_to "Personas", people_path,
                      class: "nav-link #{controller_name == 'people' ? 'active' : ''}",
                      data: { turbo: false } %>
        </li>
      </ul>
    </div>
  </div>
</nav>


    <div class="container my-4">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
