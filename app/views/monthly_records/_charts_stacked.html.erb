<div class="card mb-3">
  <div class="card-body">
    <h2 class="h5 mb-3">Tendencia por mes (apilado)</h2>
    <div style="height:320px"><canvas id="stackedChart"></canvas></div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js" crossorigin="anonymous"></script>
<%= javascript_tag nonce: true do %>
  document.addEventListener("DOMContentLoaded", function () {
    if (!window.Chart) return;
    const labels   = <%= raw(@chart_labels.to_json) %>;
    const datasets = <%= raw(@chart_datasets.to_json) %>.map(ds => ({
      label: ds.label, data: ds.data, borderWidth: 1
    }));
    const ctx = document.getElementById("stackedChart");
    if (!ctx) return;
    new Chart(ctx, {
      type: "bar",
      data: { labels, datasets },
      options: {
        responsive: true, maintainAspectRatio: false,
        plugins: { legend: { position: "bottom" }, tooltip: { mode: "index", intersect: false } },
        scales: { x: { stacked: true }, y: { stacked: true, beginAtZero: true, ticks: { precision: 0 } } }
      }
    });
  });
<% end %>
